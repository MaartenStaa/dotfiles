// Place your settings in this file to overwrite the default settings
{
  // Columns at which to show vertical rulers
  "editor.rulers": [
    80,
    120
  ],
  // Controls how the editor should render whitespace characters, possibilities are 'none', 'boundary', and 'all'. The 'boundary' option does not render single spaces between words.
  "editor.renderWhitespace": "boundary",
  // Controls how lines should wrap. Can be:
  //  - 'off' (disable wrapping),
  //  - 'on' (viewport wrapping),
  //  - 'wordWrapColumn' (wrap at `editor.wordWrapColumn`) or
  //  - 'bounded' (wrap at minimum of viewport and `editor.wordWrapColumn`).
  "editor.wordWrap": "bounded",
  // Controls the wrapping column of the editor when `editor.wordWrap` is 'wordWrapColumn' or 'bounded'.
  "editor.wordWrapColumn": 120,
  // When enabled, insert a final new line at the end of the file when saving it.
  "files.insertFinalNewline": true,
  // When enabled, will trim trailing whitespace when saving a file.
  "files.trimTrailingWhitespace": true,
  // Configures if the built-in PHP language suggestions are enabled. The support suggests PHP globals and variables.
  "php.suggest.basic": false,
  // Wether you want to use integer instead of int and boolean instead of bool.
  "php-docblocker.useShortNames": true,
  // Optional. The name or path of the coding standard to use. Defaults to the one set in phpcs global config.
  "phpcs.standard": "PSR2",
  "phpcs.ignorePatterns": [
    "_ide_helper.php",
    "vendor"
  ],
  // Controls if Problems view should automatically reveal files when opening them
  "problems.autoReveal": false,
  // Customizes which terminal application to run on OS X.
  "terminal.external.osxExec": "iTerm.app",
  // Controls the font family of the terminal, this defaults to editor.fontFamily's value.
  "terminal.integrated.fontFamily": "Meslo LG M DZ for Powerline",
  // Controls the font size in pixels of the terminal.
  "terminal.integrated.fontSize": 13,
  "workbench.colorTheme": "One Dark Pro Vivid",
  "editor.renderControlCharacters": false,
  "window.zoomLevel": 0,
  "workbench.startupEditor": "newUntitledFile",
  // Enable/disable semantic checking of JavaScript files. Existing jsconfig.json or tsconfig.json files override this setting. Requires TypeScript >=2.3.1.
  "javascript.implicitProjectConfig.checkJs": true,
  "explorer.confirmDragAndDrop": false,
  "git.autofetch": true,
  "emmet.includeLanguages": {
    "blade.php": "html",
    "laravel-blade": "html",
    "vue": "html"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "storage/framework/views": true
  },
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "disableLigatures.mode": "Line",
  "files.associations": {
    ".postcssrc": "yaml",
    "*.inc": "php",
    ".php_cs": "php",
    ".stylelintrc": "json",
    ".parcelrc": "json"
  },
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml"
  ],
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": true,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": false,
    "suppressWelcomeNotice": true
  },
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": {
      "wrap_attributes": "force-expand-multiline"
    }
  },
  "workbench.sideBar.location": "right",
  "editor.lineHeight": 25,
  "gitlens.keymap": "chorded",
  "git.confirmSync": false,
  "php-cs-fixer.executablePath": "/Users/maarten/.composer/vendor/bin/php-cs-fixer",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "breadcrumbs.enabled": true,
  "gitlab.instanceUrl": "https://git.brightalley.nl",
  "phpcs.executablePath": "vendor/bin/phpcs",
  "editor.suggest.localityBonus": true,
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "gitlens.blame.ignoreWhitespace": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true,
    "source.fixAll.eslint": true
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.gotoLocation.multiple": "goto",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSaveTimeout": 5000,
  "auto-close-tag.SublimeText3Mode": true,
  "cSpell.dictionaries": [
    "en-GB"
  ],
  "cSpell.userWords": [
    "AMRO",
    "Ebbinghaus",
    "Gamification",
    "Protobuf",
    "Protobuf's",
    "Vimeo",
    "WEBM",
    "Youtube",
    "brainitem",
    "brainitems",
    "laravel",
    "powerapp",
    "setup",
    "synctasks",
    "trans",
    "unrecognized"
  ],
  "cSpell.language": "en-GB",
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "telemetry.enableTelemetry": false,
  "git.path": "/usr/local/bin/git",
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.packageManager": "yarn",
  "prettier.jsxSingleQuote": true,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "eslint.autoFixOnSave": true,
  "i18n-ally.displayLanguage": "nl-NL",
  "i18n-ally.fullReloadOnChanged": true,
  "vim.enableNeovim": true,
  "vim.hlsearch": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "stylelint.packageManager": "yarn",
  "vscode-neovim.mouseSelectionStartVisualMode": true,
  "vscode-neovim.neovimPath": "/usr/local/bin/nvim",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue"
}
